<configuration>

	<!-- Console Appender -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<!-- Encoder -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- Set the logging level for the entire application to DEBUG -->
	<root level="DEBUG">
		<appender-ref ref="CONSOLE" />
	</root>

	<!-- Set the logging level for Spring Framework to DEBUG -->
	<logger name="org.springframework" level="DEBUG" />

</configuration>
